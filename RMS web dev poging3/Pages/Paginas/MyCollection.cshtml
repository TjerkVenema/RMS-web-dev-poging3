@page
@using RMS_web_dev_poging3.Pages.Models
@model RMS_web_dev_poging3.Pages.Paginas.MyCollection

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Index</title>
    <link rel="stylesheet" href="~/bootstrap-4.4.1-dist/css/bootstrap.css" />
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/js/jquery-3.5.1.slim.js"></script>

    
</head>
<body style="overflow-x: hidden;">


      <header class="masthead">
        <img src="~/css/images/logo3.jpg" class="logoimg" style="background-color: transparent;">
        <button class="btn disabled accauntimg button" onclick="location.href='Winkelmandje'"><img src="~/css/images/shopping-cart.jpg"></button>
        <div class="accauntimg">
        <div class="dropdown open">
          <button class="btn dropdown-toggle button" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true" 
              aria-expanded="false">
                <img src="~/css/images/accaunt.jpg" >
              </button>
          <div class="dropdown-menu" aria-labelledby="triggerId">
              <button class="dropdown-item" onclick="location.href='Verkopen'">Verkopen</button>
            <button class="dropdown-item" onclick="location.href='Kopen'">Kopen</button>
          </div>
        </div>
      </div>

      </header>


      <nav class="navbar navbar-expand-sm bg-light navbar-light">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="../Index">Home</a>
          </li>
          <li class="nav-item">
            
          </li>
        </ul>
      </nav>

      <div class="container">
        <h3 class="h3 title">Uw Verzameling:</h3>

        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="product-grid">
                    <div class="product-image">
                        <a href="#">
                        <img class="pic-1" src="~/css/images/blocked.jpg">
                        <img class="pic-2" src="~/css/images/blocked.jpg">
                        </a>

                        <span class="product-new-label">Sale</span>
                        <span class="product-discount-label">20%</span>
                    </div>
                    <ul class="rating">
                        <li class="fa fa-star"></li>
                        <li class="fa fa-star"></li>
                        <li class="fa fa-star"></li>
                        <li class="fa fa-star"></li>
                        <li class="fa fa-star disable"></li>
                    </ul>
                    <div class="product-content">
                    <h3 class="title"><a href="#">Toevoegen +</a></h3>
                    <input class="form-control " placeholder="Naam" required>
                    <input class="form-control " placeholder="Artist" required>
                    <input class="form-control " placeholder="Beschrijving" required>
                    <input class="form-control " placeholder="Label" required>
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="" id="" value="checkedValue" checked>
                        LP
                    </label>&nbsp; &nbsp; &nbsp;
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="" id="" value="checkedValue" >
                        CD
                    </label>
                    </div>
                </div>
            </div>

    @foreach (var LP in Model.records)
    {
          
          
        <div class="col-md-3 col-sm-6">
            <div class="product-grid">
                <div class="product-image">
                    <a href="#">
                        <img class="pic-1" src="~/css/images/blocked.jpg">
                        <img class="pic-2" src="~/css/images/blocked.jpg">
                    </a>


                </div>
                <ul class="rating">
                    <li class="fa fa-star"></li>
                    <li class="fa fa-star"></li>
                    <li class="fa fa-star"></li>
                    <li class="fa fa-star"></li>
                    <li class="fa fa-star"></li>
                </ul>
                <div class="product-content">
                    <h3 class="title"><a href="#">@LP.title</a></h3>
                    <div class="price">@LP.artist
                        <span></span>
                    </div>
                    <a class="add-to-cart" href="">Verkopen</a>
                </div>
            </div>
        </div>
        
    }
        </div>
    </div>
    <hr>






    <script
    src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"
  ></script>
  <script src="~/bootstrap-4.4.1-dist/js/bootstrap.js"></script>
</body>
</html>

